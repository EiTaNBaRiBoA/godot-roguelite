{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "generator": "Ninja",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "environment": {
        "NINJA_STATUS": "%p [%f/%t] - ",
        "VERBOSE": "true"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseOptions": {
            "additionalCompilerArgs": [
              "NOMINMAX=1",
              "TOOLS_ENABLED=1",
              "DEBUG_ENABLED=1",
              "DEV_ENABLED=1",
              "NO_EDITOR_SPLASH=1",
              "WINDOWS_ENABLED=1",
              "WASAPI_ENABLED=1",
              "WINMIDI_ENABLED=1",
              "TYPED_METHOD_BIND=1",
              "WIN32=1",
              "MSVC=1",
              "WINVER=0x0601",
              "_WIN32_WINNT=0x0601",
              "NOMINMAX=1",
              "_WIN64=1",
              "VULKAN_ENABLED=1",
              "GLES3_ENABLED=1",
              "MINIZIP_ENABLED=1",
              "BROTLI_ENABLED=1",
              "ZSTD_STATIC_LINKING_ONLY=1",
              "USE_VOLK=1",
              "VK_USE_PLATFORM_WIN32_KHR=1",
              "GLAD_ENABLED=1",
              "GLES_OVER_GL=1"
            ]
          }
        }
      }
    },
    {
      "displayName": "MSVC Debug",
      "name": "msvc-debug",
      "hidden": false,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "msvc-release",
      "displayName": "MSVC Release",
      "inherits": "msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "msvc-relwithdebinfo",
      "displayName": "MSVC RelWithDebInfo",
      "inherits": "msvc-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    }
  ]
}
